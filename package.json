    "express-ws": "^5.0.2",
    "nodemon": "^2.0.15",
    "pg": "^8.7.1"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.5.0",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
